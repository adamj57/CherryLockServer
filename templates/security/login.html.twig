{% extends "base.html.twig" %}

{% block title %}CherryLock - Login{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/auth/login.css') }}"
{% endblock %}

{% block body %}
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-12 col-md-6 offset-md-3 align-self-center">
                <div class="row mb-5">
                    <div class="col-6 offset-3">
                        <img class="w-100" src="{{ asset('img/logo.png') }}" alt="logo"/>
                    </div>
                </div>
                <form method="post">
                    <h1 class="h2 mb-3 font-weight-normal">
                        Zaloguj się
                    </h1>
                    {% if error %}
                        <div class="alert alert-danger">{{ error }}</div>
                    {% endif %}
                    <div class="form-group">
                        <label for="inputLogin" class="sr-only">Login</label>
                        <input type="text" name="login" class="form-control" id="inputLogin" value="{{ last_username }}" placeholder="Login" required autofocus/>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Hasło" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn btn-primary btn-block">Zaloguj</button>
                    <a class="small" href="{{ path('auth_dialog') }}">&lt Wróć</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}